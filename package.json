{
  "version": "0.3.2",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "dev": "npm run prisma:migrate && npm run prisma:generate && npm run prisma:seed && npm run start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env -- jest",
    "test:watch": "dotenv -e .env -- jest --watch",
    "test:cov": "dotenv -e .env -- jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:seed": "npx prisma db seed",
    "prisma:push": "npx prisma db push",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "1.9.1",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.0.0",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/platform-express": "10.0.0",
    "@nestjs/swagger": "7.1.8",
    "@prisma/client": "5.10.1",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "email-templates": "file:src/modules/mail/templates/",
    "helmet": "7.0.0",
    "nodemailer": "6.9.7",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@nestjs/cli": "10.0.0",
    "@nestjs/schematics": "10.0.0",
    "@nestjs/testing": "10.0.0",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "20.3.1",
    "@types/nodemailer": "6.4.14",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "dotenv-cli": "7.3.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "git-commit-msg-linter": "5.0.4",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "3.0.0",
    "prisma": "5.10.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "name": "loryblu-api",
  "description": "API para o aplicativo LoryBlu. Um aplicativo pensado para ajudar pais e crian√ßas diagnosticadas com TEA.",
  "author": "LoryBlu"
}
